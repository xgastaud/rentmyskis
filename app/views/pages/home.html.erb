<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://cdn1.bogner.com/media/catalog/category/productlist_header_sport_man_hw17_4.jpg');">
  <div class="banner-content">
    <h1 class="animated bounceInLeft">Rent My Skis</h1>
    <p class="animated flash">Find my ski equipment</p>

    <form action="/products" method="get" class="searchbar">
      <!-- <div class="searchbar"> -->
        <i class="fas fa-map-marker-alt"></i>
        <input type="text" name="address" placeholder="Paris, Chamonix, St-Tropez..." class="search-address autocomplete">
        <select name="distance" class="search-criteria">
          <option value="" disabled selected hidden>Distance</option>
          <option value="">-- Any --</option>
          <option value=5>< 5 km </option>
          <option value=50>< 50 km</option>
          <option value=500>< 500 km</option>
        </select>
        <select name="category" class="search-criteria">
          <option value="" disabled selected hidden>Category</option>
          <option value="">-- Any --</option>
          <option value="Skis">Skis</option>
          <option value="Snowboard">Snowboard</option>
          <option value="Other">Other</option>
        </select>
        <input type="submit" value="GO !" class="btn-searchbar">
      <!-- </div> -->
    </form>

     <p><%= link_to "-", products_path%></p>
  </div>
</div>
