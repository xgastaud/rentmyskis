<div class="big-container">
  <div class="product-container">

<div class="big-container">
  <div class="product-container">

    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
    </div>
    <div>
      <h2> <%= @product.title %> </h2>
      <h2> <%= @product.price_per_day %>â‚¬ per day </h2>
      <p> <%= @product.location %> </p>
      <p> <%= @product.description %> </p>
    </div>
  </div>
  <div id="form">
    <h3>Book your skis</h3>
    <%= simple_form_for([@product, @booking]) do |f| %>
      <% if @booking.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @booking.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <div class="form-inputs">
          <%= f.input :starts_at, as: :string, required: false, input_html: {id: "range_start"} %>
          <%= f.input :ends_at, as: :string, required: false, input_html: {id: "range_end"} %>
          <%= f.input :message, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Book" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<br>
<%= link_to "Show all products", products_path%>
