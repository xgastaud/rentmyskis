<div class="container">
  <div class="col-sm-4 col-sm-offset-4">
    <h2>Create a new post</h2>
    <%= simple_form_for([@product, @booking]) do |f| %>
      <% if @booking.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @booking.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <div class="form-inputs">
          <%= f.input :starts_at, as: :string, required: false, input_html: {id: "range_start"} %>
          <%= f.input :ends_at, as: :string, required: false, input_html: {id: "range_end"} %>
          <%= f.input :message, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Book" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
