<div class="container">
  <div class="row">
    <h1>Select your equipment</h1>
    <!-- Comment traiter le cas des recherches sans paramètres? -->
    <% @products.each do |product| %>
    <%# @products.where(category: params[:category]).near(params[:address],params[:distance]).each do |product| %>
    <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path product.photo %>);">
        <div class="card-category"><%= product.category %></div>
        <div class="card-description">
          <h2><%= product.title %></h2>
          <p><%= product.price_per_day %> € per day</p>
          <p><%#= product.user.email %></p>
        </div>
        <%= link_to "", product_path(product), class: "card-link"%>
      </div>
    </div>
    <% end %>
  </div>
</div>



